    "i": "^0.3.7",
    "localforage": "^1.9.0",
    "node-fetch": "^3.0.0",
    "npm": "^8.3.1",
    "password-strength-calc": "^1.0.3",
    "qr-scanner": "^1.4.0",
    "qrcanvas-vue": "^3.0.0",
    "v-tooltip": "^4.0.0-beta.17",
    "vue": "^3.2.29",
