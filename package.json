{
  "name": "PandoraPay-Wallet",
  "keywords": [
    "PandoraPay",
    "Wallet",
    "DEX"
  ],
  "scripts": {
    "build-wallet": "webpack --config build/webpack-wallet.config.js --mode=production",
    "build-wallet-analyzer": "webpack --config build/webpack-wallet.config.js --mode=production --analyzer",
    "build-pandorapay-webworker": "webpack --config build/webpack-webworker.config.js --mode=production ",
    "build-pandorapay-helper-webworker": "webpack --config build/webpack-helper-webworker.config.js --mode=production ",
    "build": "npm run build-wallet && npm run build-pandorapay-webworker && npm run build-pandorapay-helper-webworker",
    "test": "npm run build-wallet",
    "dev": "webpack-dev-server --config=./build/webpack-wallet-hot-loader.config.js --hot --host 0.0.0.0"
  },
  "dependencies": {
    "@hcaptcha/vue3-hcaptcha": "^1.0.1",
